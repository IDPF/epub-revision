<?oxygen SCHSchema="../../../util/docbook/schema/docbook.sch"?>
<section xml:id="sec-terminology" xmlns="http://docbook.org/ns/docbook"
    xmlns:xlink="http://www.w3.org/1999/xlink" xmlns:xi="http://www.w3.org/2001/XInclude"
    version="5.1b2" xmlns:epub="http://www.idpf.org/2011/epub">

    <title>Terminology</title>

    <glosslist>

        <glossentry xml:id="gloss-epub-publication" xreflabel="EPUB Publication">
            <glossterm>EPUB Publication (or Publication)</glossterm>
            <!-- TODO fix once we have a linkend for sibling list in relations of all specs
            also include, "and packaged in a container" -->
            <glossdef>
                <para>A logical document entity consisting of a set of interrelated resources, as
                    defined by this specification and its <link linkend="refEPUB3Overview">sibling
                        specifications</link>.</para>
            </glossdef>
        </glossentry>

        <glossentry xml:id="gloss-container" xreflabel="Container">
            <glossterm>Container</glossterm>
            <glossdef>
                <para>A ZIP-based packaging and distribution format for an <xref
                        linkend="gloss-epub-publication"/>, as defined in <xref
                        epub:spec-include="ocf" linkend="physical-container-zip"/>
                    <olink type="epub-spec" epub:spec-include="default" targetdoc="ocf"
                        targetptr="physical-container-zip"/>. </para>
            </glossdef>
        </glossentry>

        <glossentry xml:id="gloss-package-document" xreflabel="Package Document">
            <glossterm>Package Document</glossterm>
            <glossdef>
                <para>A document carrying bibliographical and structural metadata about the <xref
                        linkend="gloss-epub-publication"/>, as defined in <xref
                        epub:spec-include="publications" linkend="sec-package-documents"/>
                    <olink type="epub-spec" epub:spec-include="default" targetdoc="publications"
                        targetptr="sec-package-documents"/>. </para>
            </glossdef>
        </glossentry>

        <glossentry xml:id="gloss-content-document" xreflabel="Content Document">
            <glossterm>EPUB Content Document (or Content Document)</glossterm>
            <!-- TODO if this def is for XHTML and SVG, we would need a term for extended
                ones, "Extended Content Document"? -->
            <glossdef>
                <para>A document carrying all or parts of the <xref linkend="gloss-epub-publication"
                    /> content, as defined in <xref epub:spec-include="contentdocs"
                        linkend="sec-contentdocs"/>
                    <olink type="epub-spec" epub:spec-include="default" targetdoc="contentdocs"
                        targetptr="sec-contentdocs"/>. </para>
            </glossdef>
        </glossentry>

        <glossentry xml:id="gloss-content-document-xhtml">
            <glossterm>XHTML Content Document</glossterm>
            <glossdef>
                <para>A <xref linkend="gloss-content-document"/> conforming to the constraints
                    expressed in <xref epub:spec-include="contentdocs"
                        linkend="sec-contentdocs-xhtml"/>
                    <olink type="epub-spec" epub:spec-include="default" targetdoc="contentdocs"
                        targetptr="sec-contentdocs-xhtml"/>.</para>
            </glossdef>
        </glossentry>

        <glossentry xml:id="gloss-content-document-svg">
            <glossterm>SVG Content Document</glossterm>
            <glossdef>
                <para>A <xref linkend="gloss-content-document"/> conforming to the constraints
                    expressed in <xref epub:spec-include="contentdocs" linkend="sec-contentdocs-svg"/>
                    <olink type="epub-spec" epub:spec-include="default" targetdoc="contentdocs"
                        targetptr="sec-contentdocs-svg"/>.</para>
            </glossdef>
        </glossentry>

        <glossentry xml:id="gloss-content-document-scripted" xreflabel="Scripted Content Document">
            <glossterm>Scripted Content Document</glossterm>
            <glossdef>
                <para>A <xref linkend="gloss-content-document"/> that includes scripting, and/or, in
                    the case of <xref linkend="gloss-content-document-xhtml"/>s, <code>HTML
                        forms</code> elements. <remark role="todo">TODO fix this
                        definition.</remark>
                </para>
            </glossdef>
        </glossentry>

        <glossentry xml:id="gloss-extended-content-document-reference"
            xreflabel="Extended Content Document Reference">
            <!-- TODO this is perhaps too detailed for a high level glossary -->
            <glossterm>Extended Content Document Reference</glossterm>
            <glossdef>
                <para>An item in the Package File manifest that either a) refers to an <xref
                        linkend="gloss-content-document"/>, or b) includes an <xref
                        linkend="gloss-content-document"/> in its fallback chain.</para>
            </glossdef>
        </glossentry>

        <glossentry xml:id="gloss-stylesheet" xreflabel="Style Sheet">
            <glossterm>EPUB Style Sheet (or Style Sheet)</glossterm>
            <glossdef>
                <para>A CSS Style Sheet conforming to the constraints defined in <xref
                        epub:spec-include="contentdocs" linkend="sec-css"/>
                    <olink type="epub-spec" epub:spec-include="default" targetdoc="contentdocs"
                        targetptr="sec-css"/>.</para>
            </glossdef>
        </glossentry>

        <glossentry xml:id="gloss-publication-resource" xreflabel="Publication Resource">
            <glossterm>Publication Resource</glossterm>
            <glossdef>
                <para>A resource that contains content or instructions that contribute, directly or
                    indirectly, to the rendering of the <xref linkend="gloss-epub-publication"/>
                    (e.g. <xref linkend="gloss-content-document"/>s, <xref
                        linkend="gloss-stylesheet"/>s, audio, video, images, embedded fonts,
                    scripts). In the absence of this resource, the Publication can not be rendered
                    as intended by the author. </para>
                <!-- Publication resources
                    are listed in the <xref linkend="sec-manifest-elem"/>.-->
            </glossdef>
        </glossentry>

        <glossentry xml:id="gloss-external-resource" xreflabel="External Resource">
            <glossterm>External Resource</glossterm>
            <glossdef>
                <para>A resource that is referenced from within an EPUB Publication, but is not a
                        <xref linkend="gloss-publication-resource"/>.
                    <!-- External Resources
                    are not listed in the <xref linkend="sec-manifest-elem"/>.-->
                </para>
            </glossdef>
        </glossentry>

        <glossentry xml:id="gloss-epub-reading-system" xreflabel="EPUB Reading System">
            <glossterm>EPUB Reading System (or Reading System)</glossterm>
            <glossdef>
                <para>A system that processes <xref linkend="gloss-epub-publication"/>s for
                    presentation to end users in a manner conformant with this specification and its
                        <link linkend="refEPUB3Overview">sibling specifications</link>. </para>
            </glossdef>
        </glossentry>
    </glosslist>
</section>
