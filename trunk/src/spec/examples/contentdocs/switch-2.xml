<epub:switch id="XHTMLServerSideSwitch">
   <epub:case required-namespace="http://www.w3.org/1999/xhtml"
                    required-modules="server-side-image-map">
      <a href="http://www.example.com/examplemap.map">
         <img src="example.gif" 
         	       ismap="ismap"
                 title="Example Map"
                 alt="A picture of an example." />
      </a>
   </epub:case>
   <epub:default>
      <img src="example.gif"
      	    usemap="map"
              title="Example Map"
              alt="A picture of an example." />
      <map name="map">
         <area href="example1.html"
                  alt="Link to the first example."
                  shape="rect" 
                  coords="0,0,118,28" />
         <area href="example2.html"
                  alt="Link to the second example"
                  shape="rect"
                  coords="184,0,276,28" />
      </map>
   </epub:default>
</epub:switch>
