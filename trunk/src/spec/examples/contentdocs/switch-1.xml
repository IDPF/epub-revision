<epub:switch id="cmlSwitch">
   
   <epub:case required-namespace="http://www.xml-cml.org/schema">
      <cml>
         <mol title="water">
            <atoms>
               <array builtin="elsym">H O H</array>
            </atoms>
            <bonds>
               <array builtin="atid1">1 2</array>
               <array builtin="atid2">2 3</array>
               <array builtin="order">1 1</array>
            </bonds>
         </mol>
      </cml>
   </epub:case>
   
   <epub:default>
      <p>H<sub>2</sub>O</p>
   </epub:default>
   
</epub:switch>
